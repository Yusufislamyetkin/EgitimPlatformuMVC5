@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "MyQuestionUpdate";
    Layout = "~/Views/Shared/_StudentHome.cshtml";
}

<div>
    @using (Html.BeginForm("MyQuestionUpdate", "StudentQuestHeading", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">

            @Html.HiddenFor(x => x.HeadingID)
            <br />
            <div style="margin-left:20px">
                @Html.Label("Soru Başlık")
                @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.HeadingName)

            </div>


            <br />
            <div style="margin-left:20px">
                @Html.Label("Soru içerik")
                @Html.TextAreaFor(x => x.HeadingFirstContent, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.HeadingFirstContent)
            </div>

            <br />
            <div style="margin-left:20px">
                <div class="mb-3">
                    <label for="username" class="form-label">Soru Fotoğrafı</label>
                    <input type="file"
                           class="form-control"
                           id="StudentImage"
                           name="StudentImage"
                           placeholder="Soru İçin Fotoğraf Yükleyin"
                           autofocus />
                </div>
            </div>




            <br />

            <div style="margin-left:20px">
                @Html.Label("Başlık Kategori")
                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.VC, new { @class = "form-control" })
            </div>



        </div>
        <br />
        <br />
        <div style="margin-left:20px">
            <button class="btn btn-success"> Kaydet </button>
        </div>

    }


</div>