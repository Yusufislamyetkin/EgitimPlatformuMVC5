@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "AllQuestionHeading";
    Layout = "~/Views/Shared/_StudentHome.cshtml";
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | User Profile</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Mvc Proje Kampı Tema/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">

                    </div>
                    <div class="col-sm-6">

                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">


                        <!-- Profile Image -->
                        <div class="card card-primary ">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <img class="profile-user-img img-fluid "
                                         src="~/Extra/logo.png"
                                         alt="User profile picture">
                                </div>
                                <br />



                                <p class="text-muted text-center">Tüm Soru,Çözüm Ve Kategorilerinin Yayın Alanı</p>

                                <ul class="list-group list-group-unbordered mb-3">
                                    <li class="list-group-item">
                                        <b>Sorulan Soru Sayısı</b> <a class="float-right">@Model.Count</a>
                                    </li>


                                </ul>


                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- About Me Box -->
                        <br />
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Bilgi Alanı</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <br />

                                <strong><i class="fas fa-book mr-1"></i> İçerikler</strong>
                                <br />


                                @foreach (var item in ViewBag.head)
                                {



                                    <div class="card-header p-2 " style="">

                                        <a href="/StudentQuestHeading/CategoryToList/@item.CategoryID" class="btn btn-block btn-success" color:white"> @item.CategoryName </a>





                                    </div><!-- /.card-header -->

                                }
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                                <a href="/StudentQuestHeading/AllQuestionHeading" class="btn btn-info"> Tüm Soru Başlıkları </a>
                                <a href="/StudentQuestHeading/QuestionHeading" class="btn btn-success"> Soru Sor </a>






                            </div><!-- /.card-header -->
                            <div class="card-body">

                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {


                                        <div class="active tab-pane" id="activity">

                                            <div class="post clearfix">
                                                <div class="user-block">
                                                    <br />
                                                    @if (@item.Student.StudentImage == null)
                                                    {
                                                        <img class="img-circle" src="~/Extra/defaultprofil.jpg" alt="User Image">
                                                    }
                                                    else
                                                    {
                                                        <img class="img-circle" src="@item.Student.StudentImage" alt="User Image">
                                                    }

                                                    <span class="username">

                                                        <a href="#" class="font-weight-bold" style="color:black">Soru Başlık: </a>  <a href="/StudentQuestHeading/ContentArena/@item.HeadingID"> @item.HeadingName</a>


                                                        <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                                    </span>

                                                    <span class="description font-weight-bolder">

                                                        <a href="#" class="font-weight-bold" style="color:green">@item.Student.StudentName </a>  --- @item.HeadingDate
                                                    </span>
                                                    <br />
                                                    <span class="description font-weight-bolder">

                                                        <a href="#" class="font-weight-bold" style="color:black">Soru Açıklaması: </a><a href="#" class="font-weight-bold" style="color:blueviolet">@item.HeadingFirstContent </a>
                                                    </span>
                                                </div>


                                                <!-- /.user-block -->

                                                <p>

                                                    <span class="float-right">
                                                        <a href="/StudentQuestHeading/CategoryToList/@item.CategoryID" class="link-black text-sm">
                                                            <i class="fas fa-align-right"></i> @item.Category.CategoryName
                                                        </a>
                                                    </span>
                                                    @if (@item.Headingimage == null)
                                                    {

                                                    }
                                                    else
                                                    {
                                                        <a href="@item.Headingimage" target="_blank">
                                                            <img src="@item.Headingimage" style="width:300px;height:150px; margin-left:50px" />
                                                        </a>

                                                    }
                                                    <br />
                                                </p>
                                                @using (Html.BeginForm("interactionArena", "StudentQuestHeading", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                {
                                                    <div class="form-group">
                                                        <br style="color:white" />
                                                        <div class="input-group input-group-sm mb-0">
                                                            <input class="form-control form-control-sm" placeholder="Yanıtla" name="ContentValue">
                                                            <input type="hidden" name="HeadingID" value="@item.HeadingID" />
                                                            <div class="input-group-append">
                                                                @*<button type="submit" class="btn btn-danger">Gönder</button>*@

                                                                <div style="margin-left:5px">
                                                                    <div class="mb-3">

                                                                        <input type="file"
                                                                               class="btn btn-outline-success btn-sm"
                                                                               id="AnswerImage"
                                                                               name="AnswerImage"
                                                                               placeholder="Soru İçin Fotoğraf Yükleyin"
                                                                               autofocus />
                                                                    </div>
                                                                </div>

                                                                <input style="margin-left:5px" type="submit" value="Gönder" class="btn btn-danger form-control" />



                                                            </div>
                                                        </div>
                                                        <hr style="color:green" />
                                                    </div>
                                                }
                                            </div>

                                            <!-- /.post -->
                                            <!-- Post -->
                                            <!-- /.post -->
                                        </div>
                                        <br />
                                      

                                    }
                                }




                                <!-- /.tab-pane -->
                                <!-- /.tab-pane -->
                                <!-- /.tab-pane -->
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js"></script>
</body>
</html>

