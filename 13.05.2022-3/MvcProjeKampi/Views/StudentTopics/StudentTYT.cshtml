
@using EntityLayer.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<CourseFallow>
@{ string dersadı = "";}
@{
    ViewBag.Title = "StudentTYT";
    Layout = "~/Views/Shared/_StudentHome.cshtml";
}



<link href="~/Content/PagedList.css" rel="stylesheet" />
<title>TYT KONULARI</title>
<div style="background-color: white; border-radius: 5px; margin-top: 30px; margin-left:40px; margin-right:40px ">
    <p style="text-align: center; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans- serif; font-size: 20px; color: #8789FF;margin-top:14px; ">
        @if (ViewBag.dgr == 1)
        {
            dersadı = "TYT TÜRKÇE KONULARI";

        }
        @if (ViewBag.dgr == 2)
        {
            dersadı = "TYT MATEMATİK KONULARI";

        }
        @if (ViewBag.dgr == 3)
        {
            dersadı = "TYT GEOMETRİ KONULARI";

        }
        @if (ViewBag.dgr == 4)
        {
            dersadı = "TYT FİZİK KONULARI";

        }
        @if (ViewBag.dgr == 5)
        {
            dersadı = "TYT KİMYA KONULARI";

        }
        @if (ViewBag.dgr == 6)
        {
            dersadı = "TYT BİYOLOJİ KONULARI";

        }
        @if (ViewBag.dgr == 7)
        {
            dersadı = "TYT TARİH KONULARI";

        }
        @if (ViewBag.dgr == 8)
        {
            dersadı = "TYT COĞRAFYA KONULARI";

        }
        @if (ViewBag.dgr == 9)
        {
            dersadı = "TYT DİN KONULARI";

        }
        @if (ViewBag.dgr == 10)
        {
            dersadı = "TYT FELSEFE KONULARI";

        }

        @dersadı
    </p>
</div>


<div style="margin-top:30px; margin-right:80px;">
    <table class="table" style="text-align: center; margin-right:50px;margin-left:40px;">
        <thead class="table-light">
            <tr>
                <th>Ders</th>
                <th>Konular</th>
                <th>Durum</th>
                <th>Tarih</th>
                <th>Değiştir</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var x in Model)
            {
                <tr>


                    @if (x.Durum == false)
                    {
                        <td style="background-color: #FFD8D2 ">@x.Ders</td>
                        <td style="background-color: #FFD8D2 ">@x.Konu</td>
                        <td style="background-color: #FFD8D2 ">Bitmedi</td>
                        <td style="background-color: #FFD8D2 ">@x.Tarih</td>

                        <td style="background-color: #FFD8D2 ">
                            <a class="btn rounded-pill btn-outline-success" style="width: 100px; height: 40px; " href="/StudentTopics/TYTFinished/@x.ID?sayfa=@ViewBag.sayfanumber">Bitti</a>
                           
                        </td>
                    }
                    else
                    {
                        <td style="background-color: #E3F8D7 ">@x.Ders</td>
                        <td style="background-color: #E3F8D7 ">@x.Konu</td>
                        <td style="background-color: #E3F8D7 ">Bitti</td>
                        <td style="background-color: #E3F8D7 ">@x.Tarih</td>
                        <td style="background-color: #E3F8D7 ">
                           
                            <a class="btn rounded-pill btn-outline-danger" style="width:100px; height:40px;" href="/StudentTopics/TYTNotFinished/@x.ID?sayfa=@ViewBag.sayfanumber">Bitmedi</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
   
    <div style="margin-left:40px">@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("StudentTYT", new { sayfa }))   </div>


</div>

