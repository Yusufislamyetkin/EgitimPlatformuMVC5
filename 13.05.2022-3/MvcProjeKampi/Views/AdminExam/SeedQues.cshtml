@using EntityLayer.Concrete
@model  List<ExamQuestion>
@{
    ViewBag.Title = "SeedQues";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Extra/seedquesscs.css" rel="stylesheet" />
<BR />
<div class="row d-flex justify-content-center">
    <BR />
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body text-center " style="text-align:center">
                <h2 style="text-align:center;font-weight:bold" class="card-title">Sınav Soruları</h2>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="card">
                <BR />



                <div class="comment-widgets">


                    <div class="d-flex flex-row comment-row m-t-0">
                        <div class="p-2"><img src="/Extra/kalem.png" alt="user" width="40" class="rounded-circle"></div>

                        <div class="comment-text w-100">

                            @if (item.QuestionImage == null)
                            {

                            }
                            else
                            {
                                <a href="@item.QuestionImage" target="_blank">
                                    <img src="@item.QuestionImage" style="width:300px;height:150px" />
                                </a>
                            }

                            <br />


                            <h6 class="card-title">Soru : @item.Question</h6> <span class="m-b-15 d-block"> </span>
                            <br />


                            <h6 class="card-title">A -</h6> <span class="m-b-15 d-block">@item.A </span>
                            <br />
                            <h6 class="card-title">B -</h6> <span class="m-b-15 d-block">@item.B </span>
                            <br />
                            <h6 class="card-title">C -</h6> <span class="m-b-15 d-block">@item.C </span>
                            <br />
                            <h6 class="card-title">D -</h6> <span class="m-b-15 d-block">@item.D </span>
                            <BR />
                            <h6 class="card-title">Cevap:</h6> <span class="m-b-15 d-block">@item.CorrectAnswer </span>

                        </div>
                    </div>



                </div>
            </div>}
    </div>
</div>