@model   EntityLayer.Concrete.Student
@{
    Layout = null;
}


@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr"
      class="light-style customizer-hide"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Kayıt Ol</title>
    <link rel="icon" href="~/logo.png">

    <meta name="description" content="" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/Web2/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="~/Web2/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Web2/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/Web2/assets/css/demo.css" />
    <link rel="stylesheet" href="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Web2/assets/vendor/css/pages/page-auth.css" />
    <script src="~/Web2/assets/vendor/js/helpers.js"></script>
    <script src="~/Web2/assets/js/config.js"></script>
</head>

<body>

    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register Card -->
                <div class="card">
                    <div class="card-body">

                        <h4 class="mb-2">Şimdi Kayıt Ol 🚀</h4>
                        <p class="mb-4">Hesabınızı oluşturun! Extrace ayrıcalıklarından yararlanın</p>

                        @using (Html.BeginForm("StudentRegister", "StudentLogin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="mb-3">
                                <label for="email" class="form-label">E-posta</label>
                                <input type="text" class="form-control" id="StudentEmail" name="StudentEmail" placeholder="E-posta Girin" />
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentEmail)


                            <div class="mb-3">
                                <label for="username" class="form-label">Kullanıcı Adı</label>
                                <input type="text"
                                       class="form-control"
                                       id="StudentName"
                                       name="StudentName"
                                       placeholder="Kullanıcı Adı Girin"
                                       autofocus />
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentName)

                            <div class="mb-3">
                                <label for="username" class="form-label">Kullanıcı Soyadı</label>
                                <input type="text"
                                       class="form-control"
                                       id="StudentSurname"
                                       name="StudentSurname"
                                       placeholder="Kullanıcı Soyad Girin"
                                       autofocus />
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentSurname)

                            <div class="mb-3">
                                <label for="email" class="form-label">Hedeflediğiniz Meslek</label>
                                <input type="text" class="form-control" id="StudentTitle" name="StudentTitle" placeholder="Hedefinizdeki Meslek" />
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentTitle)
                            <div class="mb-3 form-password-toggle">
                                <label class="form-label" for="password">Şifre</label>
                                <div class="input-group input-group-merge">
                                    <input type="password"
                                           id="StudentPassword"
                                           class="form-control"
                                           name="StudentPassword"
                                           placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                           aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentPassword)

                            <div class="mb-3">
                                <label for="username" class="form-label">Kullanıcı Profil Fotoğrafı</label>
                                <input type="file"
                                       class="form-control"
                                       id="StudentImage"
                                       name="StudentImage"
                                       placeholder="Kullanıcı Profil Fotoğrafı Yükleyin"
                                       autofocus />
                            </div>
                            @Html.ValidationMessageFor(x => x.StudentImage)
                            <button class="btn btn-primary d-grid w-100">Kayıt Ol</button>
                        }
                        <BR />
                        <BR />
                        @if (TempData["AlertMessage"] != null)
                        {<div class="alert alert-success ">
                                <strong style="margin-left:750px"> *Başarılı ! </strong>@TempData["AlertMessage"]
                                <br />
                            </div>

                        }@if (TempData["AlertMessage2"] != null)
                        {<div class="alert alert-danger ">
                                <strong style="margin-left:750px"> *Başarısız ! </strong>@TempData["AlertMessage2"]
                                <br />
                            </div>

                        }
                        <p class="text-center">
                            <span>Hesabın var mı?</span>
                            <a href="/StudentLogin/Index/">
                                <span>Giriş Yap</span>
                            </a>
                        </p>

                        <p class="text-center">
                            <span>Ya da</span>
                            <a href="/Homepage1/Index/">
                                <span>Anasayfaya Dön</span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Web2/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/Web2/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/Web2/assets/vendor/js/bootstrap.js"></script>
    <script src="~/Web2/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Web2/assets/vendor/js/menu.js"></script>
    <script src="~/Web2/assets/js/main.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
